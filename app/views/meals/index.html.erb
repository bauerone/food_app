<section class="py-5">
	<div class="container px-5 mb-5">
		<div class="text-center mb-5">
			<h1 class="display-5 fw-bolder mb-0"><span class="text-gradient d-inline">Рецепты</span></h1>
		</div>
		<div class="row gx-5 justify-content-center">
			<div class="col-lg-11 col-xl-9 col-xxl-8">
				
				<% @meals.each do |meal| %>
					<div class="card overflow-hidden shadow rounded-4 border-0 mb-5">
						<div class="card-body p-0">
							<div class="d-flex align-items-center">
								<div class="p-5">
									<h2 class="fw-bolder"><%= meal.name %></h2>
									<p><%= meal.description %></p>
									<p>Калории: <%= meal.calorie_content %>
									</br></br>
									<%= link_to 'Подробнее', meal, class: 'btn btn-primary' %>
								</div>
								<%= image_tag url_for(meal.image.url), class: "img-fluid", alt: "..." %>
							</div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</section>
<section class="py-5 bg-gradient-primary-to-secondary text-white">
	<div class="container px-5 my-5">
		<div class="text-center">
			<h2 class="display-4 fw-bolder mb-4">Хотите добавить рецепт?</h2>
			<a class="btn btn-outline-light btn-lg px-5 py-3 fs-6 fw-bolder" href=<%= new_meal_path %>>Заполните форму</a>
		</div>
	</div>
</section>
